<?xml version="1.0"?>
<sb:Scroll xmlns:tkw="tkviews"
           xmlns:sb='widgets'
           xmlns:import="tkviews.import_global"
           xmlns:bind="tkviews.bind"
           xmlns:global='tkviews.set_global'

           import:Pack='tkviews.PackGeometry'
           import:ScrollVm="scroll.ScrollVm"

           geometry='{Pack(fill="both", expand=True)}'
           global:vm='{ScrollVm()}'>
    <tkw:For items='{vm.items}'>
        <Label geometry='{Pack(fill="x")}'
               bind:Button-1='once:{lambda e: item.add()}'>
            {item.text}
        </Label>
    </tkw:For>
</sb:Scroll>